# Multi-Exchange Balance API - Environment Variables

# ============================================
# MongoDB Configuration (REQUIRED)
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=MultExchange

# ============================================
# Security (REQUIRED)
# ============================================
# Generate with: python scripts/generate_encryption_key.py
ENCRYPTION_KEY=your-generated-encryption-key-here

# ============================================
# API Configuration
# ============================================
# Server port (default: 5000)
PORT=5000

# Flask environment (development or production)
FLASK_ENV=development

# ============================================
# Cache Configuration
# ============================================
# Balance cache TTL in seconds (default: 120 = 2 minutes)
BALANCE_CACHE_TTL=120

# Price cache TTL in seconds (default: 300 = 5 minutes)
PRICE_CACHE_TTL=300

# ============================================
# Performance Configuration
# ============================================
# Max concurrent threads for balance fetching (default: 10)
MAX_WORKERS=10

# Request timeout in seconds (default: 10)
REQUEST_TIMEOUT=10

# Max retries for API calls (default: 3)
MAX_RETRIES=3

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
# LOG_FILE=logs/app.log

# ============================================
# Snapshot Configuration
# ============================================
# Snapshot interval in hours (default: 4 hours)
# Options: 1, 2, 4, 6, 12, 24
# Recommendation: 4 hours = 6 snapshots/day = 75% less storage
SNAPSHOT_INTERVAL_HOURS=4
