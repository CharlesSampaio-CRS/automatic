# ===================================
# Flask Configuration
# ===================================
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1

# ===================================
# MongoDB Atlas (Remoto)
# ===================================
# Substitua pela sua connection string do MongoDB Atlas
# Formato: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://seu_usuario:sua_senha@cluster0.xxxxx.mongodb.net/crypto_exchange?retryWrites=true&w=majority

# ===================================
# JWT Authentication
# ===================================
# IMPORTANTE: Use uma chave forte em produção!
# Gere uma nova com: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=nQv?J/&dNnB*qni@@KonG

# Expiração dos tokens (em segundos)
JWT_ACCESS_TOKEN_EXPIRES=86400        # 24 horas
JWT_REFRESH_TOKEN_EXPIRES=2592000     # 30 dias

# ===================================
# Encryption (para API keys das exchanges)
# ===================================
# IMPORTANTE: Use uma chave forte em produção!
# Gere uma nova com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=sua_chave_de_criptografia_aqui

# ===================================
# CORS Configuration
# ===================================
# Permite requisições de qualquer origem (desenvolvimento)
# Em produção, especifique as origens permitidas:
# CORS_ORIGINS=http://localhost:19006,exp://192.168.1.100:19000
CORS_ORIGINS=*

# ===================================
# Timezone
# ===================================
TZ=America/Sao_Paulo

# ===================================
# Cache Configuration (opcional)
# ===================================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ===================================
# Rate Limiting (opcional)
# ===================================
RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URL=memory://

# ===================================
# Logging
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/flask.log

# ===================================
# Exchange APIs (opcional - para testes)
# ===================================
# Adicione suas API keys de exchanges para testes locais
# BINANCE_API_KEY=
# BINANCE_API_SECRET=
# BYBIT_API_KEY=
# BYBIT_API_SECRET=

# ===================================
# Scheduler (opcional)
# ===================================
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL=3600  # 1 hora
